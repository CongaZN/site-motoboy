    <script>
        // Mobile menu toggle
        document.getElementById('mobile-menu-btn').addEventListener('click', function() {
            const mobileMenu = document.getElementById('mobile-menu');
            mobileMenu.classList.toggle('hidden');
        });

        // Smooth scrolling for navigation links
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({
                        behavior: 'smooth',
                        block: 'start'
                    });
                }
                // Close mobile menu if open
                document.getElementById('mobile-menu').classList.add('hidden');
            });
        });

        // Check working hours function
        function checkWorkingHours(action) {
            const now = new Date();
            const currentHour = now.getHours();
            const isWorkingHours = currentHour >= 8 && currentHour < 13;

            if (!isWorkingHours) {
                showWorkingHoursAlert();
                return;
            }

            if (action === 'request') {
                openDeliveryForm();
            } else if (action === 'contact') {
                openWhatsApp();
            }
        }

        // Show working hours alert
        function showWorkingHoursAlert() {
            const alert = document.getElementById('working-hours-alert');
            alert.classList.remove('hidden');
            setTimeout(() => {
                alert.classList.add('hidden');
            }, 5000);
        }

        // Open delivery form (simplified WhatsApp message)
        function openDeliveryForm() {
            const message = "Ol√°! Gostaria de solicitar uma entrega. Podem me ajudar com os detalhes?";
            const whatsappUrl = `https://wa.me/5517996344371?text=${encodeURIComponent(message)}`;
            window.open(whatsappUrl, '_blank');
        }

        // Open WhatsApp contact
        function openWhatsApp() {
            const message = "Ol√°! Gostaria de mais informa√ß√µes sobre os servi√ßos de entrega.";
            const whatsappUrl = `https://wa.me/5517996344371?text=${encodeURIComponent(message)}`;
            window.open(whatsappUrl, '_blank');
        }

        // Calculate delivery time
        function calculateDeliveryTime() {
            const pickup = document.getElementById('pickup-location').value;
            const delivery = document.getElementById('delivery-location').value;
            const type = document.getElementById('delivery-type').value;

            if (!pickup || !delivery || !type) {
                alert('Por favor, preencha todos os campos!');
                return;
            }

            let baseTime = 0;
            let price = 0;

            // Calculate base time based on locations
            if (pickup === delivery) {
                baseTime = pickup === 'cedral' ? 15 : 20; // Same city
            } else {
                baseTime = 35; // Between cities
            }

            // Adjust time and price based on delivery type
            switch (type) {
                case 'document':
                    baseTime += 5;
                    price = 8;
                    break;
                case 'small':
                    baseTime += 8;
                    price = 12;
                    break;
                case 'medium':
                    baseTime += 12;
                    price = 18;
                    break;
                case 'express':
                    baseTime -= 10;
                    price = 25;
                    break;
            }

            const maxTime = baseTime + 10;
            
            document.getElementById('estimated-time').textContent = `${baseTime}-${maxTime} minutos`;
            document.getElementById('estimated-price').textContent = `Pre√ßo: R$ ${price},00`;
            document.getElementById('calculation-result').classList.remove('hidden');

            // Scroll to result
            document.getElementById('calculation-result').scrollIntoView({
                behavior: 'smooth',
                block: 'center'
            });
        }

        // Add scroll animations
        function animateOnScroll() {
            const elements = document.querySelectorAll('.animate-fade-in, .animate-slide-up');
            
            elements.forEach(element => {
                const elementTop = element.getBoundingClientRect().top;
                const elementVisible = 150;
                
                if (elementTop < window.innerHeight - elementVisible) {
                    element.style.opacity = '1';
                    element.style.transform = 'translateY(0)';
                }
            });
        }

        // Initialize scroll animations
        window.addEventListener('scroll', animateOnScroll);
        animateOnScroll(); // Run once on load

        // Add loading animation
        window.addEventListener('load', function() {
            document.body.style.opacity = '1';
        });

        // Check working hours on page load
        window.addEventListener('load', function() {
            const now = new Date();
            const currentHour = now.getHours();
            const isWorkingHours = currentHour >= 8 && currentHour < 13;

            if (!isWorkingHours) {
                setTimeout(showWorkingHoursAlert, 2000);
            }
        });
    </script>
